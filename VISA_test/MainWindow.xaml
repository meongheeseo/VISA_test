<Window x:Class="VISA_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RichTextBox Height="280" HorizontalAlignment="Left" Name="msgbox" VerticalAlignment="Top" Width="503" VerticalScrollBarVisibility="Auto" >
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0" />
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
        <Button Content="Start" Height="23" HorizontalAlignment="Left" Margin="335,285,0,0" Name="start_btn" VerticalAlignment="Top" Width="75" Click="start_btn_Click" />
        <Button Content="Stop" Height="23" HorizontalAlignment="Left" Margin="416,285,0,0" Name="stop_btn" VerticalAlignment="Top" Width="75" Click="stop_btn_Click" />
    </Grid>
</Window>
